<%= form_with url: admins_login_path, local: true, method: :post, class: 'p-form-signin' do |f| %>
  <h1 class="h3 mb-3 font-weight-normal">サイト管理者ログイン</h1>

  <div class="mb-2">
    <%= f.label :email, class: 'sr-only' %>
    <%= f.text_field :email, class: 'form-control', placeholder: 'メールアドレス', required: true %>
  </div>
  
  <div class="mb-3">
    <%= f.label :password, class: 'sr-only' %>
    <%= f.password_field :password, class: 'form-control', placeholder: 'パスワード', required: true %>
  </div>

  <div class="checkbox mb-3">
    <%= f.check_box :remember %>
    <%= f.label :remember do %>
      次回から自動的にログイン
    <% end %>
  </div>

  <%= f.submit 'ログイン', class: 'btn btn-lg btn-primary btn-block' %>
<% end %>
