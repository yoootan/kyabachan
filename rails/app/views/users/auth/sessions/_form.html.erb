<%= form_with model: @user, url: users_login_path, local: true do |f| %>
  <%= render 'layouts/errors', model: @user %>
  <div class="c-user_auth_card">
    <div class="c-user_auth_card__inner">
      <h2 class="c-user_auth_card__title"></h2>

      <div class="c-user_auth_card__form-group">
        <%= f.label :email, 'メールアドレス' %>
        <div class="input-group mb-3">
          <%= f.email_field :email, class: 'form-control' %>
        </div>
      </div>

      <div class="c-user_auth_card__form-group">
        <%= f.label :password, 'パスワード' %>
        <div class="input-group mb-3">
          <%= f.password_field :password, class: 'form-control' %>
        </div>
      </div>

      <div class="c-user_auth_card__btn">
        <%= f.submit 'ログインする', class: 'c-btn c-btn--orange' %>
      </div>

      <hr class="mt-4 mb-4">

      <div class="c-user_auth_card__links mt-4">
        <%= link_to 'パスワードを忘れた方はこちら', new_users_auth_password_reset_path %>
      </div>
      <div class="c-user_auth_card__links mt-2">
        <%= link_to '新規登録はこちら', users_signup_path %>
      </div>

      <div class="c-user_auth_card__footer">
        <small>サービス名</small>
      </div>
      
    </div>
  </div>
<% end %>
